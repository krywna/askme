<div>
  <h2 class="title-lg mb container-question text-center">
    <%= @questions_with_tag.count %>
    <%= inclination(@questions_with_tag.count, "вопрос ", "вопроса", "вопросов") %>
    c тэгом #<%= @tag.name %>
  </h2>

  <% @questions_with_tag.each do |question| %>
    <% if question.hidden? %>
      <div class="container-question mb-sm hide">
        <%= render question %>
      </div>
    <% else %>
      <div class="container-question mb-sm">
        <%= render question %>
      </div>
    <% end %>
  <% end %>
</div>
